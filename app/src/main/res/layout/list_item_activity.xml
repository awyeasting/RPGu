<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/padding_around_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="110dp"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="@dimen/activity_icon_size"
        android:layout_height="@dimen/activity_icon_size">
        <View
        android:id="@+id/activity_icon_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/behind_icon_circle"/>
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_around_item_icon"
            android:id="@+id/activity_icon_image"
            android:src="@drawable/strength_icon_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="40dp">
        <Button
            android:layout_height="40dp"
            android:layout_width="70dp"
            android:textSize="15dp"
            android:id="@+id/activity_button">
        </Button>
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_above_label"
        android:paddingLeft="@dimen/padding_left_of_label">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/activity_category_name"
                android:text="Running"
                android:textSize="@dimen/activity_label_text_size"
                android:textColor="@color/textColorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/activity_xp_gain"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="+manyxp"
                android:textSize="@dimen/activity_xp_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/activity_description"
                android:layout_width="0dp"
                android:text="Run a mile in my shoes"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textColorSecondary"
                android:paddingTop="@dimen/padding_between_desc_label"
                android:textSize="@dimen/activity_desc_text_size"/>
            <TextView
                android:id="@+id/activity_quantity_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 / "
                android:textColor="@color/textColorSecondary"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/activity_quantity_to_do"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:paddingRight="20dp"
                android:textColor="@color/textColorSecondary"
                android:gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/activity_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="10"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>