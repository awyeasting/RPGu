<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/padding_around_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="@dimen/activity_icon_size"
        android:layout_height="@dimen/activity_icon_size">
        <View
            android:id="@+id/activity_icon_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/behind_icon_circle"/>
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_around_item_icon"
            android:id="@+id/activity_icon_image"
            android:src="@drawable/strength_icon_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_above_label"
        android:paddingLeft="@dimen/padding_left_of_label">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/activity_category_name"
                android:textSize="@dimen/activity_label_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/activity_xp_gain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="@dimen/activity_xp_text_size"/>
        </LinearLayout>

        <TextView
            android:id="@+id/activity_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_between_desc_label"
            android:textSize="@dimen/activity_desc_text_size"/>
    </LinearLayout>
</LinearLayout>