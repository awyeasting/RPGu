<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/mainAreaColor"
    android:padding="@dimen/padding_around_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="@dimen/activity_icon_size"
            android:layout_height="@dimen/activity_icon_size">
            <View
                android:id="@+id/achievement_icon_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/behind_icon_circle"/>
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_around_item_icon"
                android:id="@+id/achievement_icon_image"
                android:src="@drawable/strength_icon_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainAreaColor"
            android:paddingTop="10dp"
            android:paddingLeft="@dimen/padding_left_of_label">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/achievement_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Running"
                    android:textSize="@dimen/activity_label_text_size"
                    android:textColor="@color/textColorSecondary"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/achievement_xp_gain"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="+manyxp"
                    android:textSize="@dimen/activity_xp_text_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/achievement_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Run a mile in my shoes"
                    android:textSize="17dp"
                    android:textColor="@color/textColorSecondary"
                    android:paddingTop="10dp"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/achievement_quantity_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 / "
                    android:textColor="@color/textColorSecondary"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/achievement_quantity_to_do"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:paddingRight="20dp"
                    android:textColor="@color/textColorSecondary"
                    android:gravity="center"
                    android:visibility="invisible"/>

            </LinearLayout>
            <ProgressBar
                android:id="@+id/achievement_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_weight="1"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="10"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#BBBBBB"/>
</LinearLayout>