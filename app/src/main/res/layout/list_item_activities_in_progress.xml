<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainAreaColor"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Running"
                android:textSize="20dp"
                android:textColor="@color/textColorSecondary"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/activity_xp_gain"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="+200000xp"
                android:textSize="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Run a mile in my shoes"
                android:textSize="15dp"
                android:textColor="@color/textColorSecondary"
                android:paddingTop="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"/>
            <TextView
                android:id="@+id/activity_quantity_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 / "
                android:textColor="@color/textColorSecondary"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/activity_quantity_to_do"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:paddingRight="20dp"
                android:textColor="@color/textColorSecondary"
                android:gravity="center"
                android:visibility="gone"/>

        </LinearLayout>
        <ProgressBar
            android:id="@+id/activity_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="10"
            android:visibility="gone"/>

        <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#BBBBBB"/>
    </LinearLayout>
</LinearLayout>