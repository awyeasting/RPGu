<?xml version="1.0" encoding="utf-8"?>
   <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/mainAreaColor"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/skill_icon_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/wisdom_icon"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/skill_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Wisdom"
            android:textSize="20dp"
            android:textColor="@color/textColorSecondary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/level_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level: 2"
                android:textSize="15dp"
                android:textColor="@color/textColorSecondary"/>
            <TextView
                android:id="@+id/xp_to_next_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="110xp to go"
                android:textSize="15dp"
                android:textColor="@color/textColorSecondary"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/current_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="2"
                android:textColor="@color/textColorSecondary"/>
            <ProgressBar
                android:id="@+id/skill_progress_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="10"/>
            <TextView
                android:id="@+id/next_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="3"
                android:textColor="@color/textColorSecondary"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
